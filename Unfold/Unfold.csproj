<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>

      <!-- NuGet -->
    <PackageId>UnfoldM</PackageId>
    <Version>0.1.1-beta.1</Version>
    <Authors>beezee</Authors>
    <Description>Unfold-based streaming combinators over LanguageExt monads.</Description>
    <PackageTags>unfold;streams;functional;LanguageExt</PackageTags>

    <!-- Optional but recommended -->
    <PackageProjectUrl>https://github.com/beezee/Unfold</PackageProjectUrl>
    <RepositoryUrl>https://github.com/beezee/Unfold</RepositoryUrl>
    <RepositoryType>git</RepositoryType>

    <!-- License / README -->
    <PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="LanguageExt.Core" Version="5.0.0-beta-54" />
    <PackageReference Include="LanguageExt.Streaming" Version="5.0.0-beta-54" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\README.md" Pack="true" PackagePath="\" />
  </ItemGroup>

</Project>
